#include<bits/stdc++.h>
#define ll long long
#define nl "\n"
using namespace std;

void ac(){
    int n;  cin>>n;
    int a[n+3];
    for(int i=1; i<=n; i++)     cin>>a[i];
    int cnt=0;
    for(int i=1; i<n; ++i){
        if(a[i]>a[i+1]){
            cnt++;
            ++i;
        }
    }
    cout<<cnt<<nl;
}
int main(){
    int tc;     cin>>tc;
    while(tc--){
        ac();
    }
    return 0;
}
