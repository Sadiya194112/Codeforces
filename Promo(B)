#include<bits/stdc++.h>
#define ll long long
using namespace std;
const int N=2e5+10;
ll ps[N];
void PreSum(ll a[], ll n){
    ps[0]=a[0];
    for(int i=1; i<n; i++)
        ps[i] = ps[i-1]+a[i];
}

int main(){
        ll n,m,x,y;  cin>>n>>m;
        ll a[n+3];
        for(int i=0; i<n; i++){
            cin>>a[i];
        }

        sort(a, a+n);
        reverse(a, a+n);
        PreSum(a, n);
//        for(int i=0; i<n; i++)  cout<<ps[i]<<" ";
//        cout<<endl;

        for(int i=0; i<m; i++){
            cin>>x>>y;
            cout<<ps[x-1]-ps[x-y-1]<<"\n";

        }

}
