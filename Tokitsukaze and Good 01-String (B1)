#include<bits/stdc++.h>
using namespace std;
void Solve(){
    int n;      cin>>n;
    string s;   cin>>s;
    int l = s.size();
    int cnt=0;
    for(int i=0; i<l-1; i++){
        if(s[i]!=s[i+1]){
            if(i%2==0)  cnt++;
        }
    }
    cout<<cnt<<"\n";
}
int main(){
    int tc;     cin>>tc;
    while(tc--){
        Solve();
    }
    return 0;
}
